<!-- Global City Selector -->
<div class="bg-gray-900 border-b border-gray-800 shadow-lg">
  <div class="container mx-auto px-4 py-3">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <%= link_to "TripHeatMap", root_path, class: "text-lg font-semibold text-white hover:text-blue-400 transition-colors" %>
        <span class="text-gray-500">|</span>
        <span class="text-sm text-gray-400">Explore neighborhoods by vibrancy</span>
      </div>
      
      <!-- City Search -->
      <div class="relative w-80" id="city-selector-container">
        <div class="relative">
          <input 
            type="text" 
            id="city-search-input"
            placeholder="Search cities..."
            autocomplete="off"
            class="w-full px-4 py-2 pl-10 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
          />
          <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
        
        <!-- Dropdown Results -->
        <div 
          id="city-dropdown" 
          class="absolute top-full left-0 right-0 mt-2 bg-gray-800 border border-gray-700 rounded-lg shadow-2xl max-h-96 overflow-y-auto z-50 hidden"
        >
          <div id="city-results" class="py-2">
            <!-- Results populated by JavaScript -->
          </div>
          <div id="city-loading" class="hidden py-4 px-4 text-center text-gray-400">
            <svg class="animate-spin h-5 w-5 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </div>
          <div id="city-no-results" class="hidden py-4 px-4 text-center text-gray-400">
            No cities found
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

