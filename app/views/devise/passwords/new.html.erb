<div class="container mx-auto px-4 sm:px-6 lg:px-8">
  <div class="row justify-content-center">
    <h2 class="text-5xl text-center mt-5">Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field my-3">
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "w-full p-3 border border-gray-300 rounded" %>
      </div>

      <div class="actions my-3">
        <%= f.submit "Send me reset password instructions", class: "w-full p-3 text-white bg-blue-600 rounded hover:bg-blue-700 cursor-pointer" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>